#include<iostream>
using namespace std;

int main()
{
    int n,a[n];
    cout<<"enter the size of array:";
    cin>>n;
    cout<<"enter the elements of array:"<<endl;
    for(int i=1;i<=n;i++){
        cin>>a[i];
    }


    int pd=a[1]-a[0];
    int curr=2,ans=2;
    for(int j=2;j<n;j++){
        if(pd==a[j]-a[j-1]){
            curr++;
        }
        else{
            curr=2;
            pd=a[j]-a[j-1];
        }
        ans=max(ans,curr);
    }

    cout<<"The size of longest arithmatic array is:"<<ans<<endl;
    return 0;

}
